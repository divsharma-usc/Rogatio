var el="#button_"+<%=@answer_id%>
<% if @is_upvoted %>
 $(el).html("Downvote | "+<%=Answer.where(id:@answer_id).first.upvotecount%>);
 noty({text: 'Answer upvoted', type: 'alert'});
 <% else %>
 $(el).html("Upvote | "+<%=Answer.where(id:@answer_id).first.upvotecount%>);
 noty({text: 'Answer downvoted', type: 'alert'});
 <% end %> 
 